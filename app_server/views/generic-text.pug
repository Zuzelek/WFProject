extends layout

block content

  div(style='margin-top: 300px;')  

    .wrapper.fadeInDown
      #formContent
        // Tabs Titles
        // Icon
        .fadeIn.first
          img#icon(src='http://danielzawadzki.com/codepen/01/icon.svg', alt='User Icon')
        // Login Form
        form
          label(for='login') Login
          input#login.fadeIn.second(type='text', name='login', placeholder='login')
          
          label(for='password') Password
          input#password.fadeIn.third(type='password', name='password', placeholder='password')
          
          button.fadeIn.fourth(type='submit') Log In
          
        // Remind Password
        #formFooter
          a.underlineHover(href='#') Forgot Password?

    link#bootstrap-css(href='//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css', rel='stylesheet')
    script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js')
    script(src='//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js')
