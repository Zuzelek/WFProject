extends layout

block content
  .row.banner
    .col-12
      h1.site-name Music
      small &nbsp;All your music statistics in one place!
  .row
    .col-12.col-md-8
      form.form-horizontal(action='', method='POST')
        fieldset
          #legend
            legend Register
          .control-group
            // Username
            label.control-label(for='username') Username
            .controls
              input#username.input-xlarge(type='text', name='username', placeholder='')
              p.help-block Username can contain any letters or numbers, without spaces
          .control-group
            // E-mail
            label.control-label(for='email') E-mail
            .controls
              input#email.input-xlarge(type='text', name='email', placeholder='')
              p.help-block Please provide your E-mail
          .control-group
            // Password
            label.control-label(for='password') Password
            .controls
              input#password.input-xlarge(type='password', name='password', placeholder='')
              p.help-block Password should be at least 4 characters
          .control-group
            // Password
            label.control-label(for='password_confirm') Password (Confirm)
            .controls
              input#password_confirm.input-xlarge(type='password', name='password_confirm', placeholder='')
              p.help-block Please confirm password
          .control-group
            // Button
            .controls
              button.btn.btn-success Register

    .col-12.col-md-4
      p.lead Curious what songs are at the top? Sign up and find out now!
      
  // Include Bootstrap CSS and JS
  link#bootstrap-css(href='//netdna.bootstrapcdn.com/twitter-bootstrap/latest/css/bootstrap.min.css', rel='stylesheet')
  script(src='//code.jquery.com/jquery-3.6.0.min.js')
  script(src='//netdna.bootstrapcdn.com/twitter-bootstrap/latest/js/bootstrap.min.js')
